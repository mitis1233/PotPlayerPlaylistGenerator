<Window x:Class="PotPlayerPlaylistGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PotPlayerPlaylistGenerator"
        mc:Ignorable="d"
        Title="PotPlayer Playlist Generator" Height="450" Width="525"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <!-- Frosted Glass Button Style -->
        <Style x:Key="GlassButton" TargetType="Button">
            <Setter Property="Background" Value="#33FFFFFF" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#4CFFFFFF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4DFFFFFF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#66FFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Frosted Glass TextBox Style -->
        <Style x:Key="GlassTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#22FFFFFF" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#4CFFFFFF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CaretBrush" Value="White" />
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom ScrollBar Thumb -->
        <Style x:Key="ScrollBarThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border CornerRadius="4" Background="#66FFFFFF" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom ScrollBar -->
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Background" Value="#22FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumbStyle}" />
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Frosted Glass ListBox Style -->
        <Style x:Key="GlassListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#22FFFFFF" />
            <Setter Property="BorderBrush" Value="#4CFFFFFF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border CornerRadius="4" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                            <ScrollViewer Focusable="false" Padding="{TemplateBinding Padding}">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true" CornerRadius="3">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#770078D7" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#440078D7" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- Main Background -->
    <Border CornerRadius="8" Background="#DD2D2D30" BorderBrush="#44FFFFFF" BorderThickness="1">
        <Grid>
            <!-- Custom Title Bar -->
            <Grid Height="30" VerticalAlignment="Top" MouseDown="TitleBar_MouseDown" Background="Transparent">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0">
                    <Path Data="M10,16.5V7.5L16,12M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z" Fill="White" Width="16" Height="16" Stretch="Uniform" VerticalAlignment="Center"/>
                    <TextBlock Text="PotPlayer Playlist Generator" Foreground="White" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
                <Button x:Name="CloseButton" Content="✕" Style="{StaticResource GlassButton}" HorizontalAlignment="Right" VerticalAlignment="Center" Width="30" Height="30" Margin="0,0,5,0" Click="CloseButton_Click"/>
            </Grid>

            <Grid Margin="10,40,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Settings Button -->
                <Button x:Name="SettingsButton" Content="⚙️ 設定" Style="{StaticResource GlassButton}" HorizontalAlignment="Right" VerticalAlignment="Top" Padding="5" Click="SettingsButton_Click"/>

                <!-- Settings Panel (Initially Hidden) -->
                <Grid x:Name="SettingsPanel" Grid.Row="0" Visibility="Collapsed" Margin="0,30,0,10">
                    <StackPanel>
                        <Label Content="影片副檔名 (以逗號 , 分隔):" Foreground="White" Padding="5,0,5,2"/>
                        <TextBox x:Name="ExtensionsTextBox" Style="{StaticResource GlassTextBox}" Margin="0,0,0,10"/>

                        <Label Content="根資料夾路徑:" Foreground="White" Padding="5,0,5,2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="PathTextBox" Grid.Column="0" Style="{StaticResource GlassTextBox}" VerticalContentAlignment="Center"/>
                            <Button x:Name="BrowseButton" Grid.Column="1" Content="瀏覽..." Style="{StaticResource GlassButton}" Margin="5,0,0,0" Padding="5" Click="BrowseButton_Click"/>
                        </Grid>

                        <Button x:Name="SaveButton" Content="儲存設定" Style="{StaticResource GlassButton}" Padding="5" Click="SaveButton_Click" HorizontalAlignment="Right" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>

                <Label Grid.Row="1" Content="請選擇要播放的資料夾:" Foreground="White" VerticalAlignment="Top" Margin="0,0,0,5"/>
                <ListBox x:Name="FolderListBox" Grid.Row="1" Style="{StaticResource GlassListBox}" Margin="0,25,0,10" SelectionMode="Single"/>

                <Button x:Name="GenerateButton" Grid.Row="2" Content="使用 PotPlayer 播放" Style="{StaticResource GlassButton}" HorizontalAlignment="Center" Padding="10,5" Click="GenerateButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
